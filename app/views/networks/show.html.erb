<div class="container">
  <h1><%= @network.name %> </h1>
  <h2>Producteurs:</h2>
  <ul>
    <% @network_farmers.each do |farmer| %>
      <li>
        <h3><%= farmer.name %></h3>
      </li>
    <% end %>
  </ul>
  <div class="row">
    <% @network.ingredients.each do |ingredient| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= ingredient.name %></h5>
            <p>Price: <%= ingredient.price %></p>
            <%= link_to 'Add to Cart', carts_items_path(network_id: @network, ingredient_id: ingredient),  data: {turbo_method: :post}, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Retour', networks_path, class:"btn-primary btn-lg p-2 mx-1"  %>
</div>
