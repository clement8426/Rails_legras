
<div class="container">
  <h1><%= @network.name %> Network</h1>

  <h2>Farmers in this Network:</h2>

  <ul>
    <% @network_farmers.each do |farmer| %>
      <li>
        <h3><%= farmer.name %></h3>
      </li>
    <% end %>
  </ul>

  <div class="row">
    <% @network_farmers.each do |farmer| %>
      <% farmer.ingredients.each do |ingredient| %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= ingredient.name %></h5>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to 'Back to Networks result', networks_path %>
</div>
