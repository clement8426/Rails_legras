<div class="container">
  <h1>Mes Paniers</h1>

  <div class="card">
    <div class="card-body">
      <% @carts.each do |cart| %>
        <h5 class="card-title">Cart ID: <%= cart.id %></h5>
        <ul class="list-group list-group-flush" id="cart<%= cart.id %>-items">
          <% cart.cart_items.each do |cart_item| %>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-8">
                  <%= cart_item.quantity %> <%= cart_item.ingredient.name %>
                </div>
                <div class="col-md-4 text-right">
                  <%= number_to_currency(cart_item.ingredient.price, unit: "€", format: "%n %u") %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="progress" data-controller="cart" data-cart-min-shipping-amount="<%= cart.network.minimum_shipping_amount.to_f %>">
          <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <p class="mt-2">Montant minimum de livraison : <%= number_to_currency(cart.network.minimum_shipping_amount.to_f, unit: "€", format: "%n %u") %></p>
      <% end %>
    </div>
  </div>
  <%= link_to 'Retour', home_path, class:"btn-primary btn-lg p-2 mx-1"  %>
</div>
