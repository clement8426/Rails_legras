<div class="row justify-content-center" data-controller="your-form-controller">
  <div class="col-sm-8 my-3">
    <%= form_with url: networks_path, method: :get, class: "d-flex", data: { controller: "your-form-controller" } do %>
      <%= text_field_tag :query,
                         params[:query],
                         class: "form-control",
                         placeholder: "Type a keyword",
                         data: { controller: "address-autocomplete", address_autocomplete_target: "address" },
                         wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } }
      %>

      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="map col-md-4 pt-1" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <div style="position: sticky; top: 150px; height: 80vh;">
      <div style="width: 100%; height: 100%;"></div>
    </div>
  </div>
</div>
